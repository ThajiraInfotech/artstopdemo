# Production Environment Variables
# Copy this file to .env and fill in actual values for production deployment.

# Server Configuration
NODE_ENV=production
PORT=8001

# Database
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/artstop?retryWrites=true&w=majority

# JWT Secrets (Generate secure random strings for production!)
# To generate: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Frontend URL for CORS
FRONTEND_URL=https://your-production-frontend-domain.com

# Cloudinary Configuration (Required for image uploads)
# Get these from https://cloudinary.com/ after creating a free account
CLOUDINARY_CLOUD_NAME=your-cloud-name-here
CLOUDINARY_API_KEY=your-api-key-here
CLOUDINARY_API_SECRET=your-api-secret-here

# Razorpay Configuration (Required for payment processing)
# Get these from https://razorpay.com/ after creating a free account
RAZORPAY_KEY_ID=rzp_test_your-key-id-here
RAZORPAY_KEY_SECRET=your-secret-key-here
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-here

# Admin Credentials for seeding (Change in production!)
ADMIN_EMAIL=admin@artstop.com
ADMIN_PASSWORD=admin123